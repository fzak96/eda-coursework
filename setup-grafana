---
- name: Install and Configure Grafana
  hosts: all
  become: true
  become_user: root

  tasks:
    - name: Install Grafana
      dnf:
        name: grafana
        state: present
        update_cache: yes

    - name: Reload systemd daemon
      systemd:
        daemon_reload: yes

    - name: Start Grafana service
      systemd:
        name: grafana-server
        state: started
        enabled: yes

    - name: Check Grafana service status
      systemd:
        name: grafana-server
      register: grafana_status

    - name: Display Grafana service status
      debug:
        var: grafana_status.status
        
    - name: Verify Grafana is responding
      uri:
        url: http://localhost:3000
        method: GET
        status_code: 200
      register: grafana_response
      until: grafana_response.status == 200
      retries: 6
      delay: 10